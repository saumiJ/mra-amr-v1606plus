FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      surfaceFeatureExtractDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

CAD.obj
{
    extractionMethod     extractFromSurface;

    extractFromSurfaceCoeffs
    {
        includedAngle    150;
    }

    subsetFeatures
    {
        nonManifoldEdges yes;
        openEdges        yes;
    }

    trimFeatures
    {
        minElem          0;
        minLen           0;
    }

    writeObj             yes;
}

